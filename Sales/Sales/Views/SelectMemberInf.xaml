<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sales.Views.SelectMemberInf">
    <ContentPage.Content>
        <StackLayout Margin="20,20">
            <Label Text="LUGAR " FontAttributes="Bold"></Label>
            <Picker x:Name="pickerlugar" SelectedIndexChanged="eventopickerlugar"></Picker>
            <Label Text="TIPO " FontAttributes="Bold"></Label>
            <Picker x:Name="pickertipo"></Picker>
            <Label Text="Nº DE LESIONES " FontAttributes="Bold"></Label>
            <Entry x:Name="numeroLesionesEntry"
                  Placeholder="Nº lesiones"
                   Keyboard="Numeric" ></Entry>
            <Button x:Name="Agregarlesion" Text="agregarlesion"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>